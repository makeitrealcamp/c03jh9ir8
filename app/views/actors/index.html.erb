<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <a href="/actors/new">
      Crear Actor
    </a>
    <table>
      <tr>
        <th>Foto</th>
        <th>Nombre</th>
        <th>Bio</th>
        <th>Fecha de Nacimiento</th>
        <th>Lugar de Nacimiento</th>
        <th>Fecha de Fallecimiento</th>
        <th>Lugar de Fallecimiento</th>
      </tr>

      <%@actors.each do |actor|%>
        <tr>
          <td><img src="<%=actor.image_url%>" alt=""></td>
          <td><%=actor.name%></td>
          <td><%=actor.bio%></td>
          <td><%=actor.birth_date%></td>
          <td><%=actor.birth_place%></td>
          <td><%=actor.alive ? "" : actor.death_date%></td>
          <td><%=actor.alive ? "" : actor.death_place%></td>
        </tr>
      <%end%>

    </table>
  </body>
</html>
