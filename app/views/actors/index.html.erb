<div class="container">
  <div class="row">
    <div class="text-right">
      <%= link_to "Crear Actor", new_actor_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
  <table class="table table-striped ">
    <thead class="thead-dark">
      <th>Foto</th>
      <th>Nombre</th>
      <th>Biografia</th>
      <th>Fecha de nacimiento</th>
      <th>Lugar de nacimiento</th>
      <th>Fecha de fallecimeinto</th>
      <th>Lugar de fallecimeinto</th>
    </thead>
    <tbody>
      <% @actor.each do |actor| %>
      <tr>
        <td><img src="<%= actor.image_url %>" alt=""></td>
        <td><%= actor.name %></td>
        <td><%= actor.bio %></td>
        <td><%= actor.birth_date %></td>
        <td><%= actor.birth_place %></td>
        <td><%= actor.death_date %></td>
        <td><%= actor.death_place %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
