<div class="container-fluid text-center">
  <h1>Vista para listar actores</h1>
  <p><%= link_to 'Crear Actor', new_actor_path %></p>
  <ul>
    <% @actors.each do |actor| %>
      <div class="container jumbotron text-center">
        <div class="col-md-5">
          <img src="<%= actor.image_url %>" alt="" class="img-thumbnail">
        </div>
        <div class="col-md-7">
          <h2><%= actor.name %></h2>
          <p><%= actor.bio %></p>
          <p><%= actor.birth_date %></p>
          <p><%= actor.birth_place %></p>
        </div>
      </div>
    <% end %>
  </ul>
</div>
