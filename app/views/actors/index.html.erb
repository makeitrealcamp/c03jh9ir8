<h2>Actors showcase</h2>

<div class="container">
    <div class="row">
        <% @actors.each_with_index do |actor, index| %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="<%= actor.image_url %>" alt="">
                    <div class="caption">
                        <h3><%= actor.name %></h3>
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-info">
                                <span class="badge">Birth date</span>
                                <%= actor.birth_date %>
                            </li>
                            <li class="list-group-item list-group-item-info">
                                <span class="badge">Birth place</span>
                                <%= actor.birth_place %>
                            </li>
                            <% if !actor.alive %>
                                <li class="list-group-item list-group-item-info">
                                    <span class="badge">Death date</span>
                                    <%= actor.death_date %>
                                </li>
                                <li class="list-group-item list-group-item-info">
                                    <span class="badge">Death place</span>
                                    <%= actor.death_place %>
                                </li>
                            <% end %>
                        </ul>
                        <p class="lead">Biography</p>
                        <p><%= actor.bio %></p>
                    </div>
                </div>
            </div>
            <% if((index + 1) % 3 == 0) %>
                </div>
                <div class="row">
            <% end %>
        <% end %>
    </div>
    <div class="jumbotron">
        <%= link_to raw('<span class="glyphicon glyphicon-plus"></span> New Actor'), new_actor_path, class: 'btn btn-success btn-large' %>
    </div>
</div>