<h1>Actors</h1>

<% @actors.each do |actor| %>
<div>
  <img src="<%= actor.image_url %>">
  <h3> <strong><%= actor.name %></strong></h3>
  <textarea rows="20" cols="50"> <%= actor.bio %></textarea>
  <p><strong>Lugar de Nacimiento: </strong>
    <%= actor.birth_date %> ,<%= actor.birth_place %>
  </p>
  <% if !actor.alive %>
  <p><strong>Fecha de Fallecimiento: </strong>
    <%= actor.death_date %>
  </p>
  <p><strong>Lugar de Fallecimiento: </strong>
    <%= actor.death_place %>
  </p>
  <% end %>
</div>
<hr>
<% end %>

<div>
  <%= link_to "Nuevo Actor", new_actor_path%>
</div>