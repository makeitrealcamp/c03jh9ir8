<h1 style="text-align: center">Lista de Actores</h1>
<table style="width:100%">
  <tr>
    <th>Foto</th>
    <th>Nombre</th>
    <th>Biograf√≠a</th>
    <th>Fecha de Nacimiento</th>
    <th>Lugar de Nacimiento</th>
    <th>Fecha de Fallecimiento</th>
    <th>Lugar de Fallecimiento</th>
  </tr>
  <% @actors.each do |actor| %>
    <tr>
    <td><img src="<%= actor.image_url %>" alt="<%= actor.name %>"></td>
    <td><%= actor.name %></td>
    <td><%= actor.bio %></td>
    <td><%= actor.birth_date %></td>
    <td><%= actor.birth_place %></td>
    <% if actor.alive == true %>
      <td>-</td>
      <td>-</td>
    <% else %>
      <td><%= actor.death_date %></td>
      <td><%= actor.death_place %></td>
    <% end %>
    </tr>
  <% end %>
</table>
