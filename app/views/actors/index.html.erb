<table>
  <tr>
    <th>Foto</th>
    <th>Nombre</th>
    <th>Bio</th>
    <th>Fecha Nac/Mue</th>
    <th>Lugar Nac/Mue</th>
  </tr>
 
  <% @actors.each do |actor| %>
    <tr>
      <td><img src=<%= actor.image_url %> alt="pic" height="62" width="42"></td>
      <td><%= actor.name %></td>
      <td><%= actor.bio %></td>
      <% if actor.alive %>
	    <td><%= actor.birth_date %></td>
	    <td><%= actor.birth_place %></td>
      <% else %>
      	<td><%= actor.death_date %></td>
	    <td><%= actor.death_place %></td>
      <% end %>
    </tr>
  <% end %>
</table>