<div class="row">
  <div class="col-sm-12">
    <h2>Actores</h2>
    <div class="text-right">

      <%= link_to 'Crear Actor', new_actor_path %>
    </div>
    <table class="table">
      <tr>
        <th>Foto</th>
        <th>Nombre</th>
        <th>Bio</th>
        <th>Fecha de nacimiento</th>
        <th>Lugar de nacimiento</th>
        <th>Fecha de muerte</th>
        <th>Lugar de muerte</th>

      </tr>
      <% @actors.each do |actor| %>
      <tr>
        <td><img src="<%= actor.image_url %>"></img></td>
        <td><%= actor.name %></td>
        <td><%= actor.bio %></td>
        <td><%= actor.birth_date %></td>
        <td><%= actor.birth_place %></td>
        <% if !actor.alive %>
        <td><%= actor.death_date %></td>
        <td><%= actor.death_place %></td>
        <% end %>
      </tr>
      <%  end %>
    </table>
  </div>
</div>
