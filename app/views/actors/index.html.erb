<h2>Estos son los actores de Prisma comunicaciones:</h2>

<%= link_to 'Crear Actor', new_actor_path %>

<ul> <% @actors.each do |actor| %>

	<% if (actor.alive) %>
		<table>
		<tr>
			<th>Foto</th>
			<th>Nombre</th>
			<th>Bio</th>
			<th>Fecha de nacimiento</th>
			<th>lugar de nacimiento</th>
		</tr>
		<tr>
			<td>
				<img src=<%= actor.image_url  %> alt="Pic of the actor" width="100px">
			</td>
			<td>
				<%= actor.name  %>
			</td>
			<td>
				<%= actor.bio  %>
			</td>
			<td>
				<%= actor.birth_date %>
			</td>
			<td>
				<%= actor.birth_place %>
			</td>
		</tr>
	</table>
	<% else %>
		<table>
		<tr>
			<th>Foto</th>
			<th>Nombre</th>
			<th>Bio</th>
			<th>Fecha de fallecimiento</th>
			<th>lugar de fallecimiento</th>
		</tr>
		<tr>
			<td>
				<img src=<%= actor.image_url  %> alt="Pic of the actor" width="100px">
			</td>
			<td>
				<%= actor.name  %>
			</td>
			<td>
				<%= actor.bio  %>
			</td>
			<td>
				<%= actor.death_date %>
			</td>
			<td>
				<%= actor.death_place %>
			</td>
		</tr>
	</table>
	<%end%>
<% end %>


