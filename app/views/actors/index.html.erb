<h1>Listado de Todos los Actores</h1>

<table border="1" >
	<thead>
		<tr>
			<th>Foto</th>
			<th>Nombre</th>
			<th>Bio</th>
			<th>Fecha Nacimiento</th>
			<th>Lugar Nacimiento</th>
			<th>Vivo</th>
			<th>Fecha Fallecimiento</th>
			<th>Lugar Fallecimiento</th>
		</tr>
	</thead>
	<tbody>
		
		

		<% @actors.each do |actor| %>
			<tr>
				<th> <img src="<%= actor.image_url %>" alt="foto"></th>
				<th> <%= actor.name %> </th>
				<th> <%= actor.bio %> </th>
				<th> <%= actor.birth_date %>  </th>
				<th> <%= actor.birth_place %> </th>
				<th> <%= actor.alive %> </th>
				<th> <%= actor.alive ? "" : actor.death_date %> </th>
				<th> <%= actor.alive ? "" : actor.death_place %> </th>
			</tr>
		<% end %>
	</tbody>		

</table>

