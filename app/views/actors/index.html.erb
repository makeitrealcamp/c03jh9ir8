<h1>Esta es la lista de Actores</h1>

<ul>
  <%@actors.each do |actor|%>
    <h1><%=actor.name%></h1>
    <h2>foto del actor</h2>
    <img src="<%=actor.image_url%>" alt="">
    <h2>Biografia del actor</h2>
    <p><%=actor.bio%></p>

	  <% if actor.alive? %>

    <h2>Fecha de nacimiento:</h2>
    <p><%= actor.birth_date %></p>
    <h2>Lugar de nacimiento</h2>
    <p><%= actor.birth_place %></p>

    <% else %>
    <h2>Fecha de nacimiento:</h2>
    <p><%= actor.birth_date %></p>
    <h2>Fecha de defunción:</h2>
    <p> <%= actor.death_date %></p>
    <h2>Lugar de defunción:</h2>
    <p><%= actor.death_place %></p>

    <%end%>
  <%end%>
</ul>
<%= link_to 'Crear Actor', new_actor_path %>
