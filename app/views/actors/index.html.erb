<table>
	<tr>
		<th>Name</th>
		<th>Bio</th>
		<th>birth_date</th>
		<th>birth_place</th>
		<th>image_url</th>
		<th>Fecha de fallecimiento</th>
		<th>Lugar fallecimiento</th>

	</tr>
	<%@actors.each do |actor|%>
	<tr>
		<td><%=actor.name%></td>
		<td><%=actor.bio%></td>
		<td><%=actor.birth_date%></td>
		<td><%=actor.birth_place%></td>
		<td><%=actor.image_url%></td>
		<%if actor.alive == true%>
		<td>Sigue vivo</td>
		<td>Sigue vivo</td>

		<%else%>
		<td><%=actor.death_date%></td>
		<td><%=actor.death_place%></td>

		<%end%>
							
	</tr>

	<%end%>

</table>