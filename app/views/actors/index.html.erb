<h1>Actors List</h1>


<ul>
<% @actors.each do |actor| %>
  <li>
  <img src="<%= actor.image_url%>">
  <h3><%= actor.name %></h3>
  <h4>Biography: </h4>
  <p><%= actor.bio %></p>
  <p>Birth place: <%= "#{actor.birth_date} #{actor.birth_place}" %> </p>
  <% unless actor.alive %>
    <p>Death date: <%= "#{actor.death_date} #{actor.death_place}" %></p>
  <% end %>
  <hr>
  </li>  
<% end %>
</ul>
