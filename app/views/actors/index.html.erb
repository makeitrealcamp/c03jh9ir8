<h1>The Actors are: </h1>





<% @actors.each do |actor| %>
  <ul>

    <h1><%= actor.name %> </h1> 
    <p><%= actor.bio %></p> 
    <img src="<%=actor.image_url%> " alt=""> 
    <p>Birth Place: <%= actor.birth_place %></p>
    <p>Birth Date: <%= actor.birth_date %></p>
    <% unless actor.alive %>
      <p>Death Date: <%=actor.death_date%></p>
      <p>Death Place: <%= actor.death_place %></p>
    <% end %>
  </ul>
   
<% end %>

<%= link_to 'Crear Actor', new_actor_path %> 