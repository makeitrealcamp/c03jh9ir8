<h1>Actores</h1>

<table>
	<thead>
		<tr>
			<th></th>
			<th>Nombre</th>
			<th>Biografia</th>
			<th>Fecha Nacimiento</th>
			<th>Lugar Nacimiento</th>
			<th>Feccha de Fallecimiento</th>
			<th>Lugar de Fallecimiento</th>
		</tr>
	</thead>
	<tbody>
		<% @actors.each do |actor| %>
			<tr>
				<td><img src="<%= actor.image_url %>" ></td>
				<td> <%= actor.name %> </td>
				<td> <%= actor.bio %> </td>
				<td> <%= actor.birth_date %> </td>
				<td> <%= actor.birth_place %> </td>
				<td> <%= actor.alive ? "" : actor.death_date %> </td>
				<td> <%= actor.alive ? "" : actor.death_place %> </td>
			</tr>
		<% end %>
	</tbody>
</table>