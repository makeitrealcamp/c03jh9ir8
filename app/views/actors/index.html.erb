<%= link_to "Crear Actor", new_actor_path %>

<h1>Listado de actores</h1>

<table style="width:100%">
  <tr>
    <th>Foto</th>
    <th>Nombre</th>
    <th>Bio</th>
    <th>Fecha de nacimiento</th>
    <th>Lugar de nacimiento</th>
    <th>Fecha de fallecimiento</th>
    <th>Lugar de fallecimiento</th>
  </tr>

<% @actors.each do |actor| %>
<tr>
  <td><img src="<%=actor.image_url%>"></td>
  <td><%= actor.name%></td>
  <td><%= actor.bio%></td>
  <td><%= actor.birth_date%></td>
  <td><%= actor.birth_place%></td>
  <td><%= actor.death_date%></td>
  <td><%= actor.death_place%></td>
</tr>
<% end %>

</table>
