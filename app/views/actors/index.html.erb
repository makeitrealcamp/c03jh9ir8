
<table>
	<th>Foto</th>	
	<th>Nombre</th>
	<th>Bio</th>
	<th>Fecha de Nacimiento</th>
	<th>Lugar de nacimiento</th>
	<th>Fecha de deceso</th>
	<th>Lugar de deceso</th>
	<% @actors.each do |actor|%>
	<tr>
		
		<td><img src="<%=actor.image_url%>"></td>
		<td><%=actor.name%></td>
		<td><%=actor.bio%></td>
		<td><%=actor.birth_date%></td>
		<td><%=actor.birth_place%></td>
		<%if !actor.alive%>
			<td><%=actor.death_date%>
			<td><%=actor.death_place%>
		<%end%>
		
	</tr>
	<%end%>
</table>

<%= link_to 'Crear Actor', new_actor_path	 %>

