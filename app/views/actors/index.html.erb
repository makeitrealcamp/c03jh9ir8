<div class='container'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>

      <div class="actors">
        <div class='text-center'>
          <h1>Artistas</h1>
          <% @actors.each do |actor| %>
          <div class='inf'>
            <img src="<%= actor.image_url %>" class="img-rounded">
            <h3><%= actor.name %></h3>
            <p><%= actor.bio %></p>
            <p><%= actor.birth_date %></p>
            <p><%= actor.birth_place %></p>
            <% if actor.alive == false %>
              <p><%= actor.death_date %></p>
              <p><%= actor.death_place %></p>
            <% end %>
          </div>
          <% end %>
          <div class='crear'>
            <%= link_to 'Crear Actor', new_actor_path, class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>