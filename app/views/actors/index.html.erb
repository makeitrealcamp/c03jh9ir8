<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <table border= 3px blue dashed>
    		<caption><h1><strong> LISTA DE ACTORES </strong></h1></caption>
    		<tr>
    			<th>Foto </th>
    			<th>Nombre</th>
          <th>Bio</th>
          <th>Fecha de Nacimiento</th>
          <th>Lugar de Nacimiento</th>
          <th>Fecha de Fallecimiento</th>
          <th>Lugar de Fallecimiento</th>
    		</tr>

        <%@actors.each do |actor|%>
          <%@actor=actor%>
          <tr>
            <td> <img src="<%=@actor.image_url%>"></td>
      			<td> <%=@actor.name%></td>
            <td> <%=@actor.bio%></td>
            <td> <%=@actor.birth_date%></td>
            <td> <%=@actor.birth_place%></td>
            <td> <%=@actor.death_date%></td>
            <td> <%=@actor.death_place%></td>
      		</tr>
          <% end %>
    </table> <br>
  <a href="/actors/new"><button type=" button" name="button"> Crear Actor</button></a> 

  </body>
</html>
