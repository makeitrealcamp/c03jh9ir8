<h1> Actores </h1>

<div>
  <%= link_to "Crear Actor", new_actor_path, class: "btn btn-primary"%>
</div>

<table border="solid, 1px">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Bio</th>
      <th>F. Nac</th>
      <th>L. Nac</th>
      <th>Vivo?</th>
      <th>F. Fall</th>
      <th>F. Fall</th>
      <th>Foto</th>
    </tr>
  </thead>
  <body>
  <% @actors.each do |actor| %>
    <tr>
      <td> <%= actor.name %> </td>
      <td> <%= actor.bio %> </td>
      <td> <%= actor.birth_date %> </td>
      <td> <%= actor.birth_place %> </td>
      <td> <%= actor.alive %> </td>
      <td> <%= actor.death_date %> </td>
      <td> <%= actor.death_place %> </td>
      <td> <img src="<%=actor.image_url%>" class="img-thumbnail"> </td>
    </tr>
  <% end %>

  </body>
</table
