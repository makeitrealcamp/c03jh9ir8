<h2><%= link_to "Crear Actor", actors_new_path %></h2>
<% @actors.each do |actor| %>
  <div>
    <img src="<%= actor.image_url %>" alt="actor.name">
    <h3><%= actor.name %></h3>
    <p><%= actor.bio %></p>
    <p><strong>Fecha de nacimiento: </strong><%= actor.birth_date %></p>
    <p><strong>Lugar de nacimiento: </strong><%= actor.birth_place %></p>
    <% if !actor.alive %>
      <p><strong>Fecha de defunción: </strong><%= actor.death_date %></p>
      <p><strong>Lugar de defunción: </strong><%= actor.death_place %></p>
    <% end %>
  </div>
<% end %>
