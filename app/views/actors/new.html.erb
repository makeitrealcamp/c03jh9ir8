<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @actor do |f| %>
<label>Name: <%= f.text_field :name %></label><br>
<label>Bio: <%= f.text_area :bio %></label><br>
<label>Birth Date: <%= f.text_field :birth_date %></label><br>
<label>Birth Place: <%= f.text_field :birth_place %></label><br>
<label>Image URL: <%= f.text_field :image_url %></label><br>
<label>Alive?: <%= f.check_box :alive %></label><br>
<label>Death Date: <%= f.text_field :death_date %></label><br>
<label>Death Place: <%= f.text_field :death_place %></label><br>
<%= f.submit %>
<% end %>