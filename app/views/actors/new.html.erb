<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Crear Actor</h1>
       <%= form_for @actor do |f| %>
       <div class="form-group">
         <%= f.text_field :image_url, class: "form-control input-lg", placeholder: "Ingresa la url de la foto" %>
       </div>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del actor" %>
        </div>
        <div class="form-group">
          <%= f.text_field :bio, class: "form-control input-lg", placeholder: "Ingresa la bio del actor" %>
        </div>
        <div class="form-group">
          <%= f.text_area :birth_date, class: "form-control input-lg", placeholder: "Ingresa la Fecha de nacimiento" %>
        </div>
        <div class="form-group">
          <%= f.text_area :birth_place, class: "form-control input-lg", placeholder: "Ingresa la Fecha de nacimiento" %>
        </div>
        <div class="form-group">
          <%= f.text_area :death_date, class: "form-control input-lg", placeholder: "Ingresa la Fecha de la muerte" %>
        </div>
        <div class="form-group">
          <%= f.text_area :death_place, class: "form-control input-lg", placeholder: "Ingresa el lugar de la muerte" %>
        </div>
        <div>
          <%= f.submit "Crear Actor", class: "btn btn-primary btn-lg btn-block" %>
        </div>
       <% end %>
    </div>
  </div>
</div>
