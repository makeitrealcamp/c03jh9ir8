<div class="container-fluid col-md-8 col-md-offset-2 jumbotron">
  <h1>Crear actor nuevo</h1>

  <% if @errors %>
    <% @errors.each do |error| %>
    <p><%= error %></p>
    <% end %>
  <% end %>

  <%= form_for @actors do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :bio %>
      <%= f.text_field :bio, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :birth_date %>
      <%= f.date_field :birth_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :birth_place %>
      <%= f.date_field :birth_place, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :image_url %>
      <%= f.text_field :image_url, class: "form-control"%>
    </div>
    <%= f.submit 'Crear actor', class: "btn btn-success" %>
  <% end %>
</div>
