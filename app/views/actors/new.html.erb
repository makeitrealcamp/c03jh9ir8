<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h1 class="text-center">Crear Actores</h1>
			<br>	
			<%= form_for @actor do |a| %>
			<div class="form-group">
				<%= a.text_field :name, class:"form-control", placeholder:"Nombre del actor/actriz" %>
			</div>
			<div class="form-group">
				<%= a.url_field :image_url, class:"form-control", placeholder:"Url de Imagen" %>
			</div>
			<div class="form-group">
				<%= a.text_area :bio, class:"form-control", placeholder:"Biografia" %>
			</div>
			<div class="form-group">
			<label for=""> Fecha Nacimiento</label>
				<%= a.date_field :birth_date, class:"form-control" %>
			</div>
			<div class="form-group">
				<%= a.text_field :birth_place, class:"form-control", placeholder:"Lugar de Nacimiento" %>
			</div>
			<div class="form-group">
				<label for=""> Fecha Defuncion</label>
				<%= a.date_field :death_date, class:"form-control" %>
			</div>
			<div class="form-group">
				<%= a.text_field :death_place, class:"form-control", placeholder:"Lugar de Defuncion" %>
			</div>
	
			<div>
			    <%= a.submit "Publicar Producto", class: "btn btn-primary btn-block" %>
			</div>
			<% end %>
		</div>
	</div>
</div>