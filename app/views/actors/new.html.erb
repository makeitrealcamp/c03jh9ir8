<h1>Crear Actor</h1>

<%= form_for :actor, url: actors_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.label :birth_date %><br>
    <%= f.date_select :birth_date %>
  </p>
  <p>
    <%= f.label :birth_place %><br>
    <%= f.text_field :birth_place %>
  </p>
  <p>
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.label :alive %><br>
    <%= f.check_box :alive %>
  </p>
  <p>
    <%= f.label :death_date %><br>
    <%= f.date_select :death_date %>
  </p>
  <p>
    <%= f.label :death_place %><br>
    <%= f.text_field :death_place %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
