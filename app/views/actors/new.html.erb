<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1 class='text-center'>Publicar Actor</h1>
      <%= form_for @actor do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del actor" %>
        </div>
        <div class="form-group">
          <%= f.text_area :bio, class: "form-control input-lg", placeholder: "Ingresa la biografía del actor" %>
        </div>
        <div class="form-group">
          <%= f.date_field :birth_date, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= f.text_field :birth_place, class: "form-control input-lg", placeholder: "Ingresa el lugar de nacimiento" %>
        </div>
        <div class="form-group">
          <%= f.url_field :image_url, class: "form-control input-lg", placeholder: "Ingresa la URL de la imagen del actor" %>
        </div>
        <div class="form-group">
          <%= f.check_box :alive %> Aún vive
        </div>
        <div class="form-group">
          <%= f.date_field :death_date, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= f.text_field :death_place, class: "form-control input-lg", placeholder: "Ingresa el lugar de fallecimiento" %>
        </div>

        <div>
          <%= f.submit "Publicar Producto", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>