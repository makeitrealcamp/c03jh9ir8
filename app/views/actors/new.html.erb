<%= form_for @actor do |f| %>
  <%= label_tag(:name, "Name") %>
  <%= f.text_field :name %>
  <%= label_tag(:bio, "Biography") %>
  <%= f.text_field :bio %>
  <%= label_tag(:birth_date, "Birth Date") %>
  <%= f.text_field :birth_date %>
  <%= label_tag(:birth_place, "Birth Place") %>
  <%= f.text_field :birth_place %>
  <%= label_tag(:image_url, "Url Picture") %>
  <%= f.text_field :image_url %>
  <%= check_box_tag(:alive) %>
  <%= label_tag(:alive, "Is he/she dead?") %>
  <%= submit_tag("Crear") %>
<% end %>