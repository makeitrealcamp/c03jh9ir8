<%= form_for @actor do |f| %>
  <%= f.url_field :image_url, placeholder: "Ingrese el URL de la Foto" %>
  <%= f.text_field :name, placeholder: "Ingrese el nombre de la Foto"  %>
  <%= f.text_field :bio, placeholder: "Ingrese la bio de la Foto"  %>
  <%= f.date_field :birth_date, placeholder: "Ingrese el nacimiento de la Foto"  %>
  <%= f.text_field :birth_place, placeholder: "Ingrese el lugar nac  de la Foto"  %>
  <%= f.date_field :death_date, placeholder: "Ingrese el URL de la Foto"  %>
  <%= f.text_field :death_place, placeholder: "Ingrese el URL de la Foto"  %>

  <%= f.submit %>
<% end %>
