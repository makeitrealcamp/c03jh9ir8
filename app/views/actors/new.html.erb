<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
  <li> 
    <%=error%>
  </li>
  <% end %>    

  </ul>
<%end%>

<div class="frame">
  <h1>Create a new actor</h1>
  <%= bootstrap_form_for @actor do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :bio %>
  <%= f.text_field :birth_date %>
  <%= f.text_field :birth_place %>
  <%= f.text_field :image_url %>
  <%= label_tag(:alive, "Is He/She Death") %>
  <%= check_box_tag(:alive) %>
  <%= f.text_field :death_date %>
  <%= f.text_field :death_place %>
  <div class="button">
  <%= submit_tag("Crear") %>
  </div>
<% end %>
</div>