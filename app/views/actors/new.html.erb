<div class="container">
  <div class="row">
  	<div class="col-sm-6 col-sm-offset-3">
  	  <h1>Publicar Actor</h1>	
  	  <%= form_for @actor do |f| %>

  	    <div class="form-group">
  	      <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del actor" %>
  	    </div>

        <div class="form-group">
           <%= f.text_area :bio, class: "form-control input-lg", placeholder: "Ingresa la Biografía del actor" %>
        </div>

        <div class="form-group">
          <%= f.label :birth_date , "Fecha de Nacimiento" %> 
          <%= f.date_field :birth_date, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_field :birth_place, class: "form-control input-lg", placeholder: "Ingresa el Lugar de Nacimiento" %>
        </div>
        
        <div class="form-group">
          <%= f.url_field :image_url, class: "form-control input-lg", placeholder: "Ingresa la URL de la Foto del Actor" %>
        </div>

        <div class="form-group">
          <%#<%= # f.select(:alive, [['SI', true], ['NO', false]], class:"form-control") %>
          <%= f.label :alive, '¿Vive?' %> <br/>
          <%= f.label :alive, 'Si', :value => "true" %>
          <%= f.radio_button :alive, true %>
          <%= f.label :alive, 'No', :value => "False" %>
          <%= f.radio_button :alive, false, :checked => true%>

        </div>
        
        <div class="form-group">
          <%= f.label :death_date, "Fecha de Muerte" %>
          <%= f.date_field :death_date, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_field :death_place, class: "form-control input-lg", placeholder:"Ingresa el lugar de Muerte del Actor" %>
        </div>

        <div>
          <%= f.submit "Publicar Actor" , class: "btn btn-primary btn-lg btn-block" %>
        </div>


  	  <% end %>

  	</div>
  </div>
</div>	