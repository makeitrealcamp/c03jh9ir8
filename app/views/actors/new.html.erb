<div class="container">
    <div class="row">
        <div class="col-md-8 col-sm-offset-2">
            <h1>Ingresar actor</h1>
            <%= form_for @actor do |f| %>
                <div class="form-group">
                    <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre" %>
                </div>
                <div class="form-group">
                    <%= f.text_area :bio, class: "form-control input-lg", placeholder: "Ingresa la biografÃ­a" %>
                </div>
                <div class="form-group">
                    <%= f.text_field :birth_date, class: "form-control input-lg", placeholder: "Ingresa la fecha de nacimiento" %>
                </div>
                <div class="form-group">
                    <%= f.text_field :birth_place, class: "form-control input-lg", placeholder: "Ingresa el lugar de nacimiento" %>
                </div>
                <div class="form-group">
                    <%= f.url_field :image_url, class: "form-control input-lg", placeholder: "Ingresa al url de la imagen" %>
                </div>
                <div class="form-group">
                    <%= f.text_field :death_date, class: "form-control input-lg", placeholder: "Ingresa la fecha de fallecimiento" %>
                </div>
                <div class="form-group">
                    <%= f.text_field :death_place, class: "form-control input-lg", placeholder: "Ingresa lugar de fallecimiento" %>
                </div>
                <div>
                    <%= f.submit "Crear Actor", class: "btn btn-primary btn-lg btn-block" %>
                </div>
            <% end %>
        </div>
    </div>
</div>