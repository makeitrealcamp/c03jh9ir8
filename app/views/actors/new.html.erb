<h1>Estas creando un Actor</h1>

<%=form_for @Actor do |f|%>
<%= f.label :name %>
<%= f.text_field :name%>
<%= f.label :bio %>
<%= f.text_field :bio %>
<%= f.label :birth_date %>
<%= f.date_field :birth_date %>
<%= f.label :birth_place %>
<%= f.text_field :birth_place %>
<%= f.label :image_url %>
<%= f.text_field :image_url %>
<%= f.label :alive %>
<%= f.check_box :alive %>
<%= f.label :death_date %>
<%= f.date_field :death_date %>
<%= f.label :death_place %>
<%= f.text_field :death_place %>
<%= f.submit %>
<% end %>

