<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>Datos del Actor</h3>
    </div>
  </div>
  <div class="row">
    <%= form_for @actor do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Full name" %>
    </div>

    <div class="form-group">
      <%= f.label :bio, "Biography" %>
      <%= f.text_area :bio, class: "form-control ", placeholder: "Biography" %>
    </div>

    <div class="form-group">
      <%= f.label :birth_date , "Birth Date" %>
      <%= f.date_field :birth_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :birth_place, "Birth Place" %>
      <%= f.text_field :birth_place, class: "form-control", placeholder: "Birth Place" %>
    </div>

    <div class="form-group">
      <%= f.label :image_url, "Image URL" %>
      <%= f.url_field :image_url, class: "form-control", placeholder: "Image URL" %>
    </div>

    <div class="form-group">
      <%= f.label :alive, 'Â¿Alive!?' %> <br/>
      <%= f.label :alive, 'Yes' %>
      <%= f.radio_button :alive, true , :checked => true%>
      <%= f.label :alive, 'No' %>
      <%= f.radio_button :alive, false%>

    </div>

    <div class="form-group">
      <%= f.label :death_date, "Death Date" %>
      <%= f.date_field :death_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :death_place, "Death Place" %>
      <%= f.text_field :death_place, class: "form-control", placeholder:"Death Place" %>
    </div>

    <div>
      <%= f.submit "Crear Actor" , class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>


</div>
