<%= form_for @actor do |f| %>
    <div> 
        <%= f.label :name %>
        <%= f.text_field :name %>       
    </div>
    <div>
        <%= f.label :bio %>
        <%= f.text_field :bio %>        
    </div>
    <div>  
        <%= f.label :birth_date %>
        <%= f.text_field :birth_date %>      
    </div>
    <div> 
        <%= f.label :birth_place %>
        <%= f.text_field :birth_place %>
    </div>
    <div>
        <%= f.label :image_url %>
        <%= f.text_field :image_url %>
    </div> 
    <div>
        <%= f.label :alive %>
        <%= f.text_field :alive %>
    </div> 
        <%= f.label :death_date %>
        <%= f.text_field :death_date %>
    <div> 
        <%= f.label :death_place %>
        <%= f.text_field :death_place %>
    </div>


    <div> 
        <%= f.submit %>   
    </div>
<% end%>

