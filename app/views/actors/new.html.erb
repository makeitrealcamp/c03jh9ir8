

<% if @actors.errors.full_messages.any? %>
  <% @actors.errors.full_messages.each do |message| %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= message %>
  </div>
  <% end %>
<% end %>
<%= form_for @actors do |f| %>
<div>
    <%= f.label :name %><br>
    <%= f.text_field :name,  class: "form-control" %><br>
    <%= f.label :bio %><br>
    <%= f.text_field :bio,  class: "form-control" %><br>
    <%= f.label :birth_date %><br>
    <%= f.date_field  :birth_date,  class: "form-control" %><br>
    <%= f.label :birth_place %><br>
    <%= f.text_field  :birth_place,  class: "form-control" %><br>
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url,  class: "form-control" %><br>
    <%= f.label :alive %><br>
    <%= f.text_field :alive,  class: "form-control" %><br>
    <%= f.label :death_date %><br>
    <%= f.date_field  :death_date,  class: "form-control" %><br>
    <%= f.label :death_place %><br>
    <%= f.text_field  :death_place,  class: "form-control" %><br><br>        
</div>
  <%= f.submit "Publish", class: "btn btn-primary" %>

<%end%>