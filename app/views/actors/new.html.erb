<h1>Crear actor</h1>
      <%= form_for @actor do |f| %>
        <div>
          <%= f.text_field :name, placeholder: "nombre" %>
        </div>
        <div>
          <%= f.text_field :bio, placeholder: "biografia" %>
        </div>
        <div>
          <%= f.date_field :birth_date, placeholder: "fecha nacimiento" %>
        </div>
        <div>
          <%= f.text_field :birth_place, placeholder: "lugar" %>
        </div>
        <div>
          <%= f.text_field :image_url, placeholder: "imagen" %>
        </div>
        <div>
          <%= f.text_field :alive, placeholder: "Vive: true or false" %>
        </div>
        <div>
          <%= f.text_field :death_date, placeholder: "fecha muerte" %>
        </div>
        <div>
          <%= f.text_field :death_place, placeholder: "lugar muerte" %>
        </div>
        <div>
          <%= f.submit "crear"  %>
        </div>
      <% end %>