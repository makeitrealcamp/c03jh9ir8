<html>

<h1>Nuevo Actor</h1>

<% if @errors %>
	<ul>
		<% @errors.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>
	
	<table>
	<%= form_for @actor do |f| %>

		<tr><td>Nombre: </td><td> <%= f.text_field :name %> </td></tr>
		<tr><td>bio: </td><td><%= f.text_field :bio %> </td></tr>
		<tr><td>birth_date: </td><td> <%= f.date_field :birth_date %> </td></tr>
		<tr><td>birth_place: </td><td> <%= f.text_field :birth_place %> </td></tr>
		<tr><td>image_url: </td><td> <%= f.text_field :image_url %> </td></tr>
		<tr><td>death_date: </td><td> <%= f.date_field :death_date %> </td></tr>
		<tr><td>death_place: </td><td><%= f.text_field :death_place %> </td></tr>
		
		<tr> <td colspan="2"> <%= f.submit %> </td></tr>
	

<% end %>
</table>


</html>