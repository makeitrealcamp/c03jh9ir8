<html>
<body>

	<table>

		<tr>
			<th>name</th>
			<th>bio</th>
			<th>birth_date</th>
			<th>birth_place</th>
			<th>Image</th>
			<th>Information</th>
			
		</tr>

		<% @actors_list.each do |actor| %>
			<tr>
		    	<td><%= actor.name %></td>
		    	<td><%= actor.bio %></td>
		    	<td><%= actor.birth_date %></td>
		    	<td><%= actor.birth_place %></td>
		    	<td><img src="<%= actor.image_url %>" /></td>

		    	<td>
		    	<%= !actor.alive ? "death_date: #{actor.death_date} and" : "" %>
		    	<%= !actor.alive ? "death_place #{actor.death_place}" : "" %>
		    	</td>

		    </tr>
		<% end %>
	</table>

</body>
</html>